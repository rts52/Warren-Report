            </topic>
            
            <topic>
                <date daid="1963_00_00">1963</date>
                <goal>Reduce nuclear testing</goal>
                <result>Treaty signed</result>
            </topic>
            
            <topic>
                <date daid="1963_00_00">1963</date>
